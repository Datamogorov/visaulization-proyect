import pandas as pd
import glob 
import os
path= r'C:\Users\Alexander\Documents\Datostesis\archivos\unamos'
filenames = glob.glob(path + "/*.xlsx")
concat_all_sheets_all_files = pd.DataFrame()
for file in filenames:  
    am = pd.read_excel(file, sheet_name= None, skiprows=None, nrows=None, usecols= None, header = 0, index_col=None)
    concat_all_sheets_single_file = pd.concat(am, sort=False)
    concat_all_sheets_all_files= concat_all_sheets_all_files.append(concat_all_sheets_single_file)
writer = pd.ExcelWriter(r'C:\Users\Alexander\Documents\Datostesis\archivos\unamos\Pozo_13_2020.xlsx')
concat_all_sheets_all_files.to_csv(writer)
writer. save()

