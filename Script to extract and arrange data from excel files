import pandas as pd
#########################Enero#################################################
January = r'C:\Users\Alexander\Documents\Datostesis\archivos\1 Parametros V-17ST2 (J) Enero-2012.xlsx'
A = pd.read_excel(January, skiprows= 19, sheet_name= None, usecols= 15, nrows=1, header= None, names= ["Date", "Flow","WHP",	"FL","Casing", "WHT","Phase-A",	"Phase-B", "Phase-C", 	"BHP", 	"BHT",	"Discharge", "Motor T°","Vib.",	"Freq."	, "BSW Mass"], index_col=None)
Enero = pd.concat(A, sort= False)
Enero['Date'] = pd.to_datetime(pd.date_range(start='01/01/2012', periods=len(Enero), freq='D'))
writer = pd.ExcelWriter(r'C:\Users\Alexander\Documents\Datostesis\archivos\unamos\A_Enero.xlsx')
Enero.to_excel(writer)
writer.save()

